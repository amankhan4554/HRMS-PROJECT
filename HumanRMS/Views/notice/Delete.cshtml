@model HumanRMS.Models.notice_info

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link href="~/css/deleteemployee.css" rel="stylesheet" />
<div class="main-content">
    <div class="container-fluid content-top-gap">

        <nav aria-label="breadcrumb">
            <ol class="breadcrumb my-breadcrumb">
                <li class="breadcrumb-item"><a href="~/notice/Index" style="color:darkblue">Notice</a></li>
                <li class="breadcrumb-item active" aria-current="page">Delete-Notice</li>
            </ol>
        </nav>

    </div>
    <div class="dl-horizontal">
        <h2>Delete Notice</h2>

        <h3>Are you sure you want to delete this Notice?</h3>

        <dl>
            <dt>
                @Html.DisplayNameFor(model => model.notice_subject)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.notice_subject)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.notice_date)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.notice_date)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.notice_time)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.notice_time)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.notice_dis)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.notice_dis)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" /> 
                <i class="fa fa-arrow-circle-o-left">@Html.ActionLink("Back to List", "Index")</i>
            </div>
        }
    </div>
</div>